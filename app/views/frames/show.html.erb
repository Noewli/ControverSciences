<% provide(:title, "Synthèse") %>
<div id="my-container" class="container-fluid">
  <div class="row">

    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-2 col-lg-offset-0">
      <div class="list-group">
        <%= link_to "<span class=\"icon-arrow-left normal\"></span>
            Revenir à la controverse".html_safe,
                    timeline_path(@frame.timeline_id),
                    class: "list-group-item" %>
        <% if @timeline.nb_frames > 1 %>
            <%= link_to "<span class=\"badge pull-left\">#{@timeline.nb_frames}</span>
                  &nbsp Toutes les contributions de cette controverse".html_safe,
                        frames_path(timeline_id: @frame.timeline_id),
                        class: "list-group-item" %>
        <% end %>
        <% if logged_in? && @frame.user_id == current_user.id && !current_user.private_timeline %>
            <%= link_to "<span class=\"icon-fork normal\"></span> Modifier votre contribution".html_safe,
                        edit_frame_path(@frame.id),
                        class: "list-group-item" %>
            <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span> Supprimer votre contribution".html_safe,
                        frame_path(@frame.id), method: :delete,
                        data:                          {confirm: "Êtes-vous certain ?"},
                        class:                         "list-group-item list-group-item-danger" %>
        <% end %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-10 col-md-10 col-lg-8 col-sm-offset-1 col-lg-offset-0">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>
            Cette contribution appartient à la controverse
            <%= link_to(@timeline.name.html_safe, timeline_path(@frame.timeline_id)) %>
          </h3>
        </div>
        <div class="panel-body">
          <%= render @frame %>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip({container: 'body'});
    });
</script>

