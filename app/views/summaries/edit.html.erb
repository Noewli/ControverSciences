<% provide(:title, "Nouvelle synthèse") %>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-2">
    <%= link_to "Revenir à la controverse",
                timeline_path( @summary.timeline_id ), class: "btn btn-block btn-primary" %>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-10">
    <div class="row">
      <div class="col-md-12 col-lg-7">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2> Modifier ma synthèse </h2>
            De la controverse :
            <%= link_to Timeline.where(id: @summary.timeline_id ).pluck(:name)[0],
                        timeline_url( @summary.timeline_id ) %>
          </div>
          <div class="panel-body">
            <%= form_for(@summary) do |f| %>
                <%= render 'shared/error_messages', object: f.object %>

                <%= f.label "Synthèse" %> <div id="characterLeft"></div>

                <%= f.text_area :content, {rows: 5, :placeholder => "synthèse",
                                           :class => "form-control textarea",
                                           id: "description",
                                           "data-provide" => "markdown" }%>
                <br/>

                <% if @parent %>
                    <%= f.hidden_field :parent_id, value: @parent.id %>
                <% end %>

                <%= f.hidden_field :timeline_id, value: @summary.timeline_id %>
                <div class="switcher pull-left">
                  <p class="fieldset">
                    <%= f.radio_button :public, true %>
                    <label for="summary_public_true">Public</label>
                    <%= f.radio_button :public, false %>
                    <label for="summary_public_false">Privée</label>
                    <span class="switch"></span>
                  </p>
                </div>
                <%= f.submit "Modifier ma synthèse", class: "pull-right btn btn-lg btn-success"%>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-12 col-lg-5">
        <strong style="font-size: 1.4em;"> &nbsp
          Ma synthèse : <br/>
        </strong>

        <%= render @my_summary, credit: false %>

        <% if @parent %>
            <strong style="font-size: 1.4em;"> &nbsp
              La synthèse utilisée pour améliorer la mienne : <br/>
            </strong>
            <%= render @parent, credit: true %>
        <% end %>

      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="mylist" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"> Créer un lien vers une référence </h4>
      </div>
      <div class="modal-body">
        <%= select("reference", "reference_id", @list , {}, {id: "list-ref", class: 'form-control'}) %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggled="no" id="save-btn"> Ajouter </button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myref" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"> Ajouter un lien externe </h4>
      </div>
      <div class="modal-body">
        <div class="input-group">
          <span class="input-group-addon">http://</span>
          <input id="http-text" type="text" class="form-control">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggled="no" id="save-btn-http"> Ajouter </button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    var mysavebtn = document.getElementById('save-btn');
    $('#save-btn').on('click', function (event) {
        mysavebtn.setAttribute("data-toggled", 'yes');
    });

    var myref = document.getElementById('save-btn-http');
    $('#save-btn-http').on('click', function (event) {
        myref.setAttribute("data-toggled", 'yes');
    });
    $(document).ready(function() {
        var max = 12500;
        var len = $('#description').val().length;
        if (len >= max) {
            var ch = max - len;
            $('#characterLeft').css({"color": "#a94442"});
            $('#characterLeft').text(ch + ' caractères en trop !');
        } else {
            var ch = max - len;
            $('#characterLeft').css({"color": "#5cb85c"});
            $('#characterLeft').text(ch + ' caractères restants.');
        }
    });
    $('#description').keyup(function () {
        var max = 12500;
        var len = $(this).val().length;
        if (len >= max) {
            var ch = max - len;
            $('#characterLeft').css({"color": "#a94442"});
            $('#characterLeft').text(ch + ' caractères en trop !');
        } else {
            var ch = max - len;
            $('#characterLeft').css({"color": "#5cb85c"});
            $('#characterLeft').text(ch + ' caractères restants.');
        }
    });
</script>