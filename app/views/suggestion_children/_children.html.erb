<br/>
<div class="row">
  <% suggestion_children.each do |suggestion_child| %>
  <div class="col-md-3">
    <div class="clearfix pull-right">
        <%= link_to "<span class=\"glyphicon glyphicon-thumbs-up\"> #{suggestion_child.plus} </span>".html_safe,
                    suggestion_child_votes_path(vote: {suggestion_child_id: suggestion_child.id, value: "true" } ),
                    method: :post, class: "btn btn-primary" %>
        <br/>
        <%= link_to "<span class=\"glyphicon glyphicon-thumbs-down\"> #{suggestion_child.minus} </span>".html_safe,
                    suggestion_child_votes_path(vote: {suggestion_child_id: suggestion_child.id, value: "false" } ),
                    method: :post, class: "btn btn-primary" %>
      </div>
  </div>
  <div class="col-md-9">
        <div class="panel panel-default suggestion">
          <div class="panel-body">
          <span class="content">
            <div class="text-justify">
              <%= suggestion_child.comment %>
            </div>
          </span>
          </div>
          <div class="panel-footer">
              <span class="timestamp">
                Publié il y a <%= time_ago_in_words(suggestion_child.created_at) %> par
                <% if suggestion_child.user_id %>
                    <%= link_to suggestion_child.name, user_path(suggestion_child.user_id) %>
                <% else %>
                    <%= suggestion_child.name %>
                <% end %>
               </span>
          </div>
        </div>
     </div>
  <% end %>
  <div class="col-md-9 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        Une furieuse envie de répondre, c'est ici !
      </div>
      <div class="panel-body">
        <%= form_for( :suggestion_child, url: suggestion_children_path, method: :post) do |f| %>
            <%= f.hidden_field :suggestion_id, value: suggestion_id %>
            <div class="form-group">
              <%= f.label :comment, class: 'control-label' %><br>
              <%= f.text_area :comment, class: 'form-control' %>
              <span class="help-block"></span>
            </div>
            <div class="row">
              <div class="col-xs-12 col-md-6">
                <% if logged_in? %>
                    <%= f.text_field :name, value: current_user.name, class: 'form-control selectwidthauto' %>
                <% else %>
                    <%= f.text_field :name, value: 'Un illustre Anonyme', class: 'form-control selectwidthauto' %>
                <% end %>
              </div>
              <div class="col-xs-12 col-md-6">
                <div class="pull-right">
                  <%= f.submit 'Publier', class: 'btn btn-primary'%>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
