<br/>
<div class="row">
  <% suggestion_children.each do |suggestion_child| %>
      <%= render suggestion_child %>
  <% end %>
  <div class="col-xs-10 col-xs-offset-1">
    <% if logged_in? %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <span class="glyphicon glyphicon-comment"></span>
            Une furieuse envie de répondre, c'est ici !
          </div>
          <div class="panel-body">
            <%= form_for(:suggestion_child, url: suggestion_children_path, method: :post) do |f| %>
                <%= f.hidden_field :suggestion_id, value: suggestion_id %>
                <div class="form-group">
                  <div id="characterLeft"></div>
                  <%= f.text_area :comment, {rows:  3,
                                             :class => "form-control textarea"} %>
                  <span class="help-block"></span>
                </div>
                <div class="row">
                  <div class="col-xs-12">
                    <div class="pull-right">
                      <%= f.button "Publier &nbsp <span class=\"glyphicon glyphicon-send\" aria-hidden=\"true\"></span>".html_safe,
                                   class: 'btn btn-success',
                                   data:  {disable_with: "<span class=\"glyphicon glyphicon-save\" aria-hidden=\"true\"></span> &nbsp Publication en cours "} %>
                    </div>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
    <% else %>
        <div class="clearfix">
          <%= link_to "<span class=\"glyphicon glyphicon-comment\"></span> Créer un compte pour répondre".html_safe, new_user_path,
                      class: "btn btn-primary pull-right" %>
        </div>
    <% end %>
  </div>
</div>
