<% provide(:title, "Modifier une réponse") %>

<div id="my-container" class="container-fluid">
  <div class="col-xs-12 col-lg-offset-1 col-lg-10">
    <div class="row">
      <%= link_to "<span class=\"glyphicon glyphicon-comment\" aria-hidden=\"true\"></span> Revenir aux discussions".html_safe, suggestions_path,
                  class: "btn btn-primary" %>
      <h5> Le commentaire </h5>
      <div class="clearfix">
      <%= render @suggestion, show_likes: false %>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5> Modifier votre réponse </h5>
        </div>
        <div class="panel-body">
          <div class="col-xs-12 col-md-8 col-md-offset-2">
            <div class="panel panel-default suggestion">
              <div class="panel-body">
                <%= form_for @suggestion_child do |f| %>
                    <%= render 'shared/error_messages', object: f.object %>
                    <%= f.hidden_field :suggestion_id, value: @suggestion_child.suggestion_id %>
                    <div class="form-group">
                      <%= f.label :comment, "Votre réponse", class: 'control-label' %><br>
                      <div id="characterLeft"></div>
                      <%= f.text_area :comment, class: 'form-control textarea', id: "markdown-textarea" %>
                      <span class="help-block"></span>
                    </div>
                    <div class="row">
                      <div class="col-xs-12">
                        <div class="pull-right">
                          <%= f.button "Modifier &nbsp <span class=\"glyphicon glyphicon-ok\" aria-hidden=\"true\"></span>".html_safe,
                                       class: 'btn btn-success',
                                       data: {disable_with: "<span class=\"glyphicon glyphicon-save\" aria-hidden=\"true\"></span> &nbsp Modification en cours "}%>
                        </div>
                      </div>
                    </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        $("#markdown-textarea").markdown({autofocus:false,savable:false,hiddenButtons:['cmdLinkInt','cmdUrl']});
        var max = 1200;
        var len = $('#markdown-textarea').val().length;
        if (len >= max) {
            var ch = len - max;
            $('#characterLeft').css({"color": "#a94442"});
            $('#characterLeft').text(ch + ' caractères en trop !');
        } else {
            var ch = max - len;
            $('#characterLeft').css({"color": "#5cb85c"});
            $('#characterLeft').text(ch + ' caractères restants.');
        }
    });
    $('#markdown-textarea' ).keyup(function () {
        var max = 1200;
        var len = $(this).val().length;
        if (len >= max) {
            var ch = len - max;
            $('#characterLeft').css({"color": "#a94442"});
            $('#characterLeft').text(ch + ' caractères en trop !');
        } else {
            var ch = max - len;
            $('#characterLeft').css({"color": "#5cb85c"});
            $('#characterLeft').text(ch + ' caractères restants.');
        }
    });
</script>