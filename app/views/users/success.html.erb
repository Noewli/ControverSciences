<%= render 'static_pages/home' %>

<div class="modal fade" id="activateit" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"> <%= t('views.default.creation_confirmed') %> </h4>
      </div>
      <div class="modal-body clearfix">
        <%= t('views.users.created_html') %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal"><%= t('views.default.close') %></button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $('#activateit').modal('show');
</script>
