    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 timeline">
      <div class="thumbnail">
        <div class="caption">
          <div class="timeline_name">
            <h2> <%= link_to timeline.name, timeline %>
            </h2>
          </div>
          <ul class="list-group">
            <li class="list-group-item clearfix">
              <%= image_tag("icons/myicon-users.svg", alt: "ref", height: "24px") %>
              Contributeurs
              <span class="badge"><%= timeline.nb_contributors %></span>
            </li>
            <li class="list-group-item clearfix">
              <%= image_tag("icons/myicon-ref.svg", alt: "ref", height: "24px") %>
              References
              <span class="badge"><%= timeline.nb_references %></span>
            </li>
            <li class="list-group-item clearfix">
              <%= image_tag("icons/myicon-edit-rule.svg", alt: "ref", height: "24px") %>
              Editions
              <span class="badge"><%= timeline.nb_edits %></span>
            </li>
            <li class="list-group-item clearfix">
              <%= image_tag("icons/myicon-ribbon.svg", alt: "ref", height: "24px") %>
              Votes
              <span class="badge"><%= timeline.nb_votes %></span>
            </li>
            <li class="list-group-item clearfix">
                <% timeline.get_tag_list.each do |name| %>
                      <%= image_tag("icons/myicon-#{name}.svg", alt: name, title: tags_hash[name],  height: "24px")%>
                <% end %>
            </li>
            <li class="list-group-item clearfix">
               <span class="bold"> Qualité des références de cette controverse :
                 </span></br>
            <% for i in 1..5 %>
                <%= image_tag("icons/myicon-#{i}.svg", height: "24px")%>
                <%= timeline["star_#{i}".to_sym] -%>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>