<% provide(:title, @timeline.name) %>

<% content_for :timeline do %>
    <%= stylesheet_link_tag 'timeline', media: 'all' %>
<% end %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @timeline.name %></h3>

  </div>
  <div class="panel-body">
    <h2>
    <%= @timeline.timeline_edit_content %>
    </h2>
    <span class="pull-right">
    Créé par <%= @timeline.user.name %>
    </span>
  </div>
  <div class="panel-footer">
    <%= image_tag("icons/myicon-users.png", alt: "ref", height: "38px") %>
    <span class="badge"><%= @timeline.nb_contributors %></span>
    <%= image_tag("icons/myicon-ref.png", alt: "ref", height: "38px") %>
    <span class="badge"><%= @timeline.nb_references %></span>
    <%= image_tag("icons/myicon-edit-rule.png", alt: "ref", height: "38px") %>
    <span class="badge"><%= @timeline.nb_edits %></span>
    <%= image_tag("icons/myicon-votes.png", alt: "ref", height: "38px") %>
    <span class="badge"><%= @timeline.nb_votes %></span>
    <span class="pull-right">
          <div class="btn-group">
            <% @timeline.get_tag_list.each do |name| %>
                <label class="btn btn-default">
                  <%= image_tag("icons/myicon-#{name}.png", alt: name, height: "24px")%>
                </label>
            <% end %>
          </div>
    </span>
    <div class="clearfix"></div>
  </div>
</div>

<% if logged_in? %>
    <span class="new-reference">
        <%= link_to '<span class="glyphicon glyphicon-plus-sign" >
            </span> Ajouter une réfèrence à cette controverse'.html_safe,
                    new_reference_path %>
    </span>
<% end %>

<div class="timeline-jquery-example">
</div>

<%= javascript_tag do %>
    $(document).ready(function(){
    $('.timeline-jquery-example').verticalTimeline({
    data: <%= raw render(template: "timelines/show.json.rabl") -%>,
    handleResize: true
    });
    });
<% end %>