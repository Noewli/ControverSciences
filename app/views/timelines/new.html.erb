<% provide(:title, "Nouvelle timeline") %>

<h1>Créer une nouvelle timeline</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@timeline) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :content %>
        <%= f.text_field :timeline_edit_content, class: 'form-control' %>

        <%= f.submit "Créer une timeline", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
