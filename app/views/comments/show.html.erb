<% provide(:title, "Analyse") %>
<div id="my-container" class="container-fluid">
<div class="row">

  <div class="col-xs-12 col-md-4 col-lg-2">
    <%= link_to "<span class=\"icon-arrow-left fat\"></span> Revenir à la controverse <span class=\"icon-frog fat\"></span>".html_safe,
                timeline_path(@comment.timeline_id), class: "btn btn-block btn-primary", style: "white-space: normal" %>
    <br/>
    <br/>
    <%= link_to "<span class=\"icon-arrow-left\"></span> Revenir à la référence <span class=\"icon-reference fat\"></span>".html_safe,
                reference_path(@comment.reference_id), class: "btn btn-block  btn-primary", style: "white-space: normal" %>
  </div>

<div class="col-xs-12 col-md-8 col-lg-10">
<div class="row">
<div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-1">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>
      Analyse de la référence
      <%= link_to( @comment.reference_title , reference_path(@comment.reference_id) ) %>
      </h4>
    </div>
    <div class="panel-body">
        <%= render @comment, display: true, delete: false %>
    </div>
  </div>
</div>


</div>
</div>
</div>
</div>