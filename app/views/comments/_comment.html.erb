<li id="comment-<%= comment.id %>">
  <div class="midcol">
    <div>
      <%= link_to image_tag("icons/myicon-up.png", alt: "logo", height: "16px"),
                  new_vote_path(vote: {timeline_id: comment.timeline_id, reference_id: comment.reference_id, comment_id: comment.id, field: comment.field, value: 1}) %>
      <%= comment.votes_plus %>
    </div>
    <div>
      <%= link_to image_tag("icons/myicon-down.png", alt: "logo", height: "16px"),
                  new_vote_path(vote: {timeline_id: comment.timeline_id, reference_id: comment.reference_id, comment_id: comment.id, field: comment.field, value: 0}) %>
      <%= comment.votes_minus %>
    </div>
  </div>
  <div class="comment">
  <span class="By "><%= link_to comment.user.name, comment.user %></span>
  <span class="content"><%= comment.id %> <%= comment.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
  </div>
</li>