<li id="comment-<%= comment.id %>">
  <div class="clearfix">
      <% if vote %>
        <%= form_for(:vote, url: votes_path, method: :post) do |f| %>
            <div class="btn btn-default">
              Mon vote <%= comment.my_vote( current_user.id ) %>
            </div>
            <%= f.hidden_field :comment_id, value: comment.id %>
            <%= f.hidden_field :reference_id, value: comment.reference_id %>
            <%= f.hidden_field :timeline_id, value: comment.timeline_id %>
            <div class="col-md-2">
              <%= f.select :value, (0..(12 + comment.my_vote( current_user.id ) - session[:my_votes])),
                           {selected: comment.my_vote( current_user.id )}, { class: "form-control" } %>
            </div>
            <div class="col-md-3">
              <%= f.submit "Enregistrer le vote", class: "btn btn-primary"%>
            </div>
        <% end %>
      <% else %>
        <div class="btn btn-default">
          <%= comment.balance %>
        </div>
      <% end %>
      <div class="pull-right">
            <%= link_to image_tag("icons/myicon-fork.png", alt: "fork", height: "28px"),
                        new_comment_path(comment_id: comment.id), :class => "btn btn-default", :style => "padding: 2px"%>
      </div>
  </div>
  <div class="comment">
  <span class="content">
    <%= comment.balance %>
    <% for fi in 1..5 %>
        <%= fields_hash[fi] %>
        <%= comment["markdown_#{fi}".to_sym].html_safe %>
    <% end %>

  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago by <%= link_to comment.user_name, user_path(comment.user_id) %>
   </span>
  </div>
</li>
