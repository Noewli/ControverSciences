<% provide(:title, "Alzheimer ?") %>

<div id="my-container" class="container-fluid">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>RÃ©initialiser mon mot de passe</h3>
      </div>
      <div class="panel-body">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= hidden_field_tag :email, @user.email %>

        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation de mot de passe" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>

        <%= f.button "Enregistrer le nouveau mot de passe &nbsp <span class=\"glyphicon glyphicon-lock\" aria-hidden=\"true\"></span>".html_safe,
                     class: 'pull-right btn btn-success',
                     data: {disable_with: "<span class=\"glyphicon glyphicon-transfer\" aria-hidden=\"true\"></span> &nbsp Enregistrement en cours "}%>
    <% end %>
      </div>
    </div>
  </div>
</div>
</div>
