<% provide(:title, "Notifications") %>
<div id="my-container" class="container-fluid">
<div class="row">
  <div class="col-xs-12 col-lg-8 col-lg-offset-2">
    <div class="panel panel-primary">
      <div class="panel-body">
        Notifications
      </div>
      <table id="notification-sel-comments" class="table table-striped table-hover">
        <tbody class="page">
        <% if current_user.notifications_all_important == 0  %>
            <tr>
              <td>Pas de notifications</td>
            </tr>
        <% else %>
            <% @summary_wins.each do |com| %>
                <tr>
                  <td> Votre synthèse <%= link_to com.content[0..70]+"...", notifications_summary_selection_win_path(id: com.id ) %>
                    de la controverse <%= link_to com.timeline_name, timeline_path(com.timeline_id ) %> a pris la première place. </td>
                </tr>
            <% end %>
            <% @summary_losses.each do |com| %>
                <tr>
                  <td> Votre synthèse <%= link_to com.content[0..70]+"...", notifications_summary_selection_win_path(id: com.id ) %>
                    de la controverse <%= link_to com.timeline_name, timeline_path(com.timeline_id ) %> a perdu la première place. </td>
                </tr>
            <% end %>
            <% @wins.each do |com| %>
                <tr>
                  <td> Votre analyse <%= link_to com.title_markdown.html_safe, notifications_selection_win_path(id: com.id ) %>
                    de la référence <%= link_to com.reference_title, reference_path(com.reference_id) %>, dans la controverse
                    <%= link_to com.timeline_name, timeline_path(com.timeline_id ) %> a pris la première place. </td>
                </tr>
            <% end %>
            <% @losses.each do |com| %>
                <tr>
                  <td> Votre analyse <%= link_to com.title_markdown.html_safe, notifications_selection_win_path(id: com.id ) %>
                    de la référence <%= link_to com.reference_title, reference_path(com.reference_id) %>, dans la controverse
                    <%= link_to com.timeline_name, timeline_path(com.timeline_id ) %> a perdu la première place. </td>
                </tr>
            <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>