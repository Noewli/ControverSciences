<% provide(:title, 'Assistant') %>
<div id="my-container" class="container-fluid">
<div class="col-md-12 col-lg-10 col-lg-offset-1">
  <div class="panel panel-default">
<table id="users" class="table table-striped table-hover">
    <thead>
    <tr>
        <th class="col-sm-2">Email</th>
        <th class="col-sm-1">Name </th>
        <th class="col-sm-4">Why?</th>
        <th class="col-sm-2">Accept user</th>
        <th class="col-sm-2">Accept user and whitelist domain name</th>
        <th class="col-sm-1">Delete user</th>
    </tr>
    </thead>
    <tbody class="page">
    <% @users.each do |user| %>
    <tr class="user">
      <td> <%= user.email %>   </td>
      <td> <%= user.name %>  </td>
      <td> <%= user.why %> </td>
      <td> <%= link_to "accept", pending_user_path( id: "none", user_id: user.id, handle: "Accept user"),
                       method: :delete %> </td>
      <td> <%= link_to "accept", pending_user_path( id: "none", user_id: user.id, handle: "Accept user and whitelist domain name"),
                       method: :delete %> </td>
      <td> <%= link_to "accept", pending_user_path( id: "none", user_id: user.id, handle: "Delete user"),
                       method: :delete %> </td>
    </tr>
    <% end %>
    </tbody>
</table>
<br>
</div>
</div>
</div>