<% provide(:title, @reference.title) %>

  <div class="col-sm-10 col-md-12 col-lg-8 col-md-offset-2">
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @reference.title_fr %></h3>
  </div>
  <div class="panel-body">
        <ul class="list-group">
          <li class="list-group-item"> <div class="bold"> Titre original de la référence : </div> <%= @reference.title %></li>
          <li class="list-group-item"> <div class="bold"> Les auteurs de l'étude : </div> <%= @reference.author %> </li>
          <li class="list-group-item"> <div class="bold"> Année de publication : </div> <%= @reference.year %> </li>
          <li class="list-group-item"> <div class="bold"> Journal qui a osé éditer cette bouse : </div> <%= @reference.journal %></li>
          <% if not @reference.abstract.empty? %>
          <li class="list-group-item"> <div class="bold"> Abstract (dans sa langue original) : </div> <%= @reference.abstract %></li>
          <% end %>
          <li class="list-group-item"> <div class="bold"> Lien vers la référence : </div> <%= link_to @reference.doi, @reference.doi, target: "_blank" %></li>
          <li class="list-group-item"> <div class="bold"> Timeline dans laquelle apparait cet article : </div> <%= link_to @reference.timeline.name, @reference.timeline, target: "_blank" %></li>
        </ul>
        <div class="panel-group" id="accordion">
          <h3> L'éxperience réalisé : </h3>
            <%= render 'shared/field_comments', field: 1, content: @reference.f_1_content %>
          <h3> Ce que l'étude démontre : </h3>
            <%= render 'shared/field_comments', field: 2, content: @reference.f_2_content %>
          <h3> Les limites de l'étude : </h3>
            <%= render 'shared/field_comments', field: 3, content: @reference.f_3_content %>
          <h3> Le rapport à la question : </h3>
            <%= render 'shared/field_comments', field: 4, content: @reference.f_4_content %>
          <h3> Remarques éventuelles :</h3>
          <%= render 'shared/field_comments', field: 5, content: @reference.f_5_content %>
        </div>
    </div>
  <div class="panel-footer">
    <%= image_tag("icons/myicon-users.png", alt: "ref", height: "24px") %>
    <span class="badge"><%= @reference.nb_contributors %></span>
    <%= image_tag("icons/myicon-edit-rule.png", alt: "ref", height: "24px") %>
    <span class="badge"><%= @reference.nb_edits %></span>
    <%= image_tag("icons/myicon-votes.png", alt: "ref", height: "24px") %>
    <span class="badge"><%= @reference.nb_votes %></span>
    <span class="pull-right">
      Ajouté par <%= @reference.user.name %>
    </span>
    <div class="clearfix"></div>
  </div>
</div>
</div>


