<div class="row">
  <div class="col-md-6 col-md-offset-3 ">
    Mes controverses
    <table id="notification-timelines" class="table table-striped table-hover">
      <thead>
      <tr>
        <th class="col-sm-8"> Nom </th>
        <th class="col-sm-3"> Tags </th>
        <th class="col-sm-1 center"> Supprimer </th>
      </tr>
      </thead>

      <tbody class="page">
      <% if !@timelines.any? %>
          <tr class="notification-timeline">
            <td> <%= link_to "Vous n'avez pas encore créé de controverse",
                             new_timeline_path %> </td>
            <td>  </td>
            <td>  </td>
          </tr>
      <% else %>
          <% @timelines.each do |timeline| %>
              <tr class="following-timeline">
                <td> <%= link_to timeline.name, timeline_path(timeline.id) %> </td>
                <td>
                  <% timeline.get_tag_list.each do |name| %>
                      <%= image_tag("icons/myicon-#{name}.svg", alt: name,
                                    title: tags_hash[name],  height: "24px")%>
                  <% end %>
                </td>
                <td class="center"> <%= link_to "<span class=\"glyphicon glyphicon-trash\"> </span>".html_safe,
                                 timeline_path( timeline.id ), method: :delete,
                                 data: { confirm: " Vous êtes certains ?" } %>  </td>
              </tr>
          <% end %>
          <tr class="notification-timeline">
            <td> <%= link_to "<span class=\"glyphicon glyphicon-plus\"> </span> Créer une nouvelle controverse".html_safe,
                             new_timeline_path %> </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>