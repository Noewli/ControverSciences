<div class="col-md-10 col-md-offset-1">
  Mes analyses
  <table id="notification-comments" class="table table-striped table-hover">
    <thead>
    <tr>
      <th class="col-xs-4"> L'analyse </th>
      <th class="col-xs-4"> De la référence </th>
      <th class="col-xs-3"> Dans la controverse </th>
      <th class="col-xs-1"> Supprimer </th>
    </tr>
    </thead>

    <tbody class="page">
    <% if !@comments.any? %>
        <tr class="notification-comment">
          <td> Pas encore de références  </td>
        </tr>
    <% else %>
        <% @comments.each do |com| %>
            <tr class="notification-comment">
              <td> <%= link_to com.f_1_content[0..70]+"...", comment_path(com.id ) %>   </td>
              <td> <%= link_to com.reference_title, reference_path(com.reference_id) %>   </td>
              <td> <%= link_to com.timeline_name, timeline_path(com.timeline_id ) %>   </td>
              <td> <%= link_to "<span class=\"glyphicon glyphicon-trash\"> </span>".html_safe,
                               comment_path( com.id ), method: :delete,
                               data: { confirm: " Vous êtes certains ?" } %>  </td>
            </tr>
        <% end %>
    <% end %>
    </tbody>
  </table>
</div>