<footer class="footer">
      <p class="pull-right">
      <%= link_to 'bas de page  <span class="glyphicon-class glyphicon glyphicon-chevron-down"></span>'.html_safe, '#Bottom' %>
        <%= link_to '<span class="glyphicon-class glyphicon glyphicon-chevron-up"></span> haut de page'.html_safe, '#Top' %>
      </p>
      <div id="footer-screen">
        <p>
        &copy; <%= Time.now.year %> <%= site_name %> 
        &bull;
        <%= link_to "A propos",   about_path %>
        &bull;
        <%= link_to "Nous contacter", contact_path %>
        </p>
      </div>
</footer>
<% if logged_in? %>
<div class="modal fade" id="newinvitation" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"> Inviter un amis </h4>
      </div>
      <div class="modal-body">
        <%= form_for( :invitation, url: invitations_path, remote: true,
                      html: {role: :form, 'data-model' => 'invitation'}) do |f| %>
            <div class="form-group">
              <%= f.label :email, class: 'control-label' %><br>
              <%= f.text_field :email, class: 'form-control' %>
              <span class="help-block"></span>
            </div>
            <div class="form-group">
              <%= f.label :message, class: 'control-label' %><br>
              <%= f.text_area :message, class: 'form-control' %>
              <span class="help-block"></span>
            </div>
            <div class="actions">
              <%= f.submit 'Envoyer', class: 'btn btn-primary'%>
            </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('textarea').autosize();
    });
</script>
<% end %>

