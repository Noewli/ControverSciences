<header id="top" class="navbar navbar-fixed-top bs-docs-nav" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" data-target=".bs-navbar-collapse" 
 			data-toggle="collapse" type="button">
         <span class="sr-only">Toggle navigation</span>
	 <span class="icon-bar"></span>
	 <span class="icon-bar"></span>
	 <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("logo_title.png", alt: "logo", height: "64px"), root_path %>
    </div>
    <nav class="navbar-collapse bs-navbar-collapse collapse" role="navigation" style="height: 1px;">
       <ul class="nav navbar-nav navbar-right">
            <li><%= link_to '<span class="glyphicon glyphicon-home"></span>'.html_safe,   root_path %></li>
            <li><%= link_to "Timelines",   timelines_path %></li>
            <li><%= link_to "Aide",   help_path %></li>
          <% if logged_in? %>
            <li><%= link_to "Contributeurs", users_path %></li>
            <li class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button"
                              id="dropdownMenu1" data-toggle="dropdown"> 
		 <span class="glyphicon glyphicon-edit"></span>
                 <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to '<span class="glyphicon glyphicon-plus-sign" ></span>   Créer une timeline'.html_safe, '#' %></li>
                <li><%= link_to '<span class="glyphicon glyphicon-plus-sign" ></span> Ajouter une réfèrence'.html_safe, '#' %></li>
              </ul>
            </li>
            <li class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button"
                              id="dropdownMenu1" data-toggle="dropdown"> 
		 <span class="glyphicon glyphicon-user"></span>
                 <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to '<span class="glyphicon glyphicon-eye-open"></span> Mon profil'.html_safe,
				current_user %> </li>
                <li><%= link_to '<span class="glyphicon glyphicon-cog"></span> Paramètres'.html_safe,
				edit_user_path(current_user) %> </li>
                <li class="divider"></li>
                <li>
                  <%= link_to '<span class="glyphicon glyphicon-off"></span> Se déconnecter'.html_safe,
				logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
            <% else %>
            <li><%= link_to "S'identifier", login_path, id: "link-navbar" %></li>
            <% end %>
          </ul>
    </nav>
  </div>
</header>
