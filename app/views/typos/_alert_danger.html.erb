<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-xs-offset-2 col-md-6 col-md-offset-3">
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <strong>
        <span class="glyphicon glyphicon-warning-sign"></span>
      </strong>
      <% if @typo.get_model_errors.full_messages.blank? %>
          <b>
            Vous avez déjà soumis une correction pour cette contribution, qui est en attente de validation !
          </b>
      <% else %>
          <b>
            <% @typo.get_model_errors.full_messages.each do |msg| %>
                <%= msg %> <br/>
            <% end %>
          </b>
      <% end %>
    </div>
  </div>
</div>